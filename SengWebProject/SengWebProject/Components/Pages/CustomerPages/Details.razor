@page "/customers/details"
@using Microsoft.EntityFrameworkCore
@using DataAcess2
@inject IDbContextFactory<SengWebProject.Data.SengWebProjectContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Details</PageTitle>

<h1>Details</h1>

<div>
    <h2>Customer</h2>
    <hr />
    @if (customer is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@customer.Name</dd>
            <dt class="col-sm-2">ContactInfo</dt>
            <dd class="col-sm-10">@customer.ContactInfo</dd>
            <dt class="col-sm-2">Address</dt>
            <dd class="col-sm-10">@customer.Address</dd>
            <dt class="col-sm-2">LoyaltyPoints</dt>
            <dd class="col-sm-10">@customer.LoyaltyPoints</dd>
            <dt class="col-sm-2">LastModified</dt>
            <dd class="col-sm-10">@customer.LastModified</dd>
        </dl>
        <div>
            <a href="@($"/customers/edit?customerid={customer.CustomerID}")">Edit</a> |
            <a href="@($"/customers")">Back to List</a>
        </div>
    }
</div>

@code {
    private Customer? customer;

    [SupplyParameterFromQuery]
    private int CustomerID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        customer = await context.Customers.FirstOrDefaultAsync(m => m.CustomerID == CustomerID);

        if (customer is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }
}
