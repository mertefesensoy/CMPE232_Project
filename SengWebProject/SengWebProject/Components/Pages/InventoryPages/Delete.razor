@page "/inventories/delete"
@using Microsoft.EntityFrameworkCore
@using DataAcess2
@inject IDbContextFactory<SengWebProject.Data.SengWebProjectContext> DbFactory
@inject NavigationManager NavigationManager

<PageTitle>Delete</PageTitle>

<h1>Delete</h1>

<p>Are you sure you want to delete this?</p>
<div>
    <h2>Inventory</h2>
    <hr />
    @if (inventory is null)
    {
        <p><em>Loading...</em></p>
    }
    else {
        <dl class="row">
            <dt class="col-sm-2">ProductID</dt>
            <dd class="col-sm-10">@inventory.ProductID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">EmployeeID</dt>
            <dd class="col-sm-10">@inventory.EmployeeID</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">QuantityAvailable</dt>
            <dd class="col-sm-10">@inventory.QuantityAvailable</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">WarehouseLocation</dt>
            <dd class="col-sm-10">@inventory.WarehouseLocation</dd>
        </dl>
        <dl class="row">
            <dt class="col-sm-2">LastModified</dt>
            <dd class="col-sm-10">@inventory.LastModified</dd>
        </dl>
        <EditForm method="post" Model="inventory" OnValidSubmit="DeleteInventory" FormName="delete" Enhance>
            <button type="submit" class="btn btn-danger" disabled="@(inventory is null)">Delete</button> |
            <a href="/inventories">Back to List</a>
        </EditForm>
    }
</div>

@code {
    private Inventory? inventory;

    [SupplyParameterFromQuery]
    private int InventoryID { get; set; }

    protected override async Task OnInitializedAsync()
    {
        using var context = DbFactory.CreateDbContext();
        inventory = await context.Inventories.FirstOrDefaultAsync(m => m.InventoryID == InventoryID);

        if (inventory is null)
        {
            NavigationManager.NavigateTo("notfound");
        }
    }

    private async Task DeleteInventory()
    {
        using var context = DbFactory.CreateDbContext();
        context.Inventories.Remove(inventory!);
        await context.SaveChangesAsync();
        NavigationManager.NavigateTo("/inventories");
    }
}
